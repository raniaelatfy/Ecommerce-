@model Ecommerce.Model.SubCategory
@{
    ViewBag.tittle = "About SubCategory";
}
@using (Ajax.BeginForm("Details", "SubCategory", new AjaxOptions { HttpMethod = "post"}))
{


    @Html.HiddenFor(Model => Model.ID)
    <div class="form-group">
        @Html.LabelFor(Model => Model.Name, new { @class = "control-label" })
        @Html.EditorFor(Model => Model.Name, new { HtmlAttribute = new { @class = "form-control", disabled = "true" } })
        @Html.ValidationMessageFor(n => n.Name, "")
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Description, new { @class = "control-label" })
        @Html.EditorFor(Model => Model.Description, new { HtmlAttribute = new { @class = "form-control",disabled="true" } })
        @Html.ValidationMessageFor(n => n.Name, "")
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.CategoryFK, new { @class = "control-label" })
        @Html.DropDownListFor(Model => Model.CategoryFK, (SelectList)ViewBag.subcategory, new { HtmlAttribute = new { @class = "form-control" , disabled = "true" } })
        @Html.ValidationMessageFor(n => n.Name, "")
    </div>
   

}








