@model List<Ecommerce.Model.Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <h2>Brand</h2>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" onclick="AddBrand()">create new Brand</button>
    @*<a class="btn btn-success" style="margin-bottom:10px " onclick="AddSubCategory()">

            Add Sub Catigory
        </a>*@


</div>

@Html.Partial("GetData")
@section scripts{


    <script>
        $(document).ready(function () {

            LoadDataGrid();
        });


        var LoadDataGrid = function () {
            $.ajax({
                url: '/Brand/LoadData',
                method: 'Get',
                data: {},
                success: function (data) {
                  //  DataTable
                    var dtObj = {
                        data: data,
                        responsive: true,
                        retrieve: true,
                        ordering: true,
                        dom: 'Bfrtip',
                       // buttons: dtBtns,
                        columns: [
                            { 'data': 'ID' },
                            { 'data': 'Name' },
                            {'data':'Description'},

                            {
                                'data': 'ID',
                                'searchable': true,
                                'sortable': true,
                                'render': function (code) {

                                    var btns = '';

                                    btns += '<a href="javascript:void(0)" onclick="return Details(' + code + ')"  title="Details" class="btn btn-info"> Details</a>';
                                    btns += '<a href="javascript:void(0)" onclick=" return Edit(' + code + ')"  title="Edit" class="btn btn-success">Edit</a>';
                                    btns += '<a href="javascript:void(0)"  onclick=" return Delete(' + code + ')"  title="Delete" class="btn btn-danger">Delete</a>';

                                    return btns;
                                }
                            }
                        ]
                    };

                    $("#subCategoryTable").dataTable().fnDestroy();
                    $("#subCategoryTable").dataTable(dtObj);
                }
            });

        }




        function AddBrand() {

            $.ajax({

                type: "Get",
                url: '@Url.Action("AddEditDetails", "Brand")',
                contentType: "application/json;charset=utf-8",

                success: function (data) {
                    $("#body").html(data);
                    $("#subcategoryModal").modal("show");
                }

                });
        }
    </script>
    }